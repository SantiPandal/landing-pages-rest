---
interface Props {
  headline?: string
  items: Array<{
    quote: string
    author: string
    role: string
    company: string
    image?: string
    metric?: { value: string; label: string }
  }>
}

const { headline = 'Resultados Reales', items } = Astro.props
---

<section class="py-20 lg:py-28 bg-white" id="testimonios">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center max-w-2xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-[var(--color-primary)] tracking-tight">
        {headline}
      </h2>
    </div>

    <!-- Testimonial Cards -->
    <div class={`grid grid-cols-1 gap-8 ${items.length >= 2 ? 'md:grid-cols-2' : 'max-w-2xl mx-auto'} ${items.length >= 3 ? 'lg:grid-cols-3' : ''}`}>
      {items.map((item) => (
        <div class="bg-gray-50 rounded-2xl p-8 relative">
          {/* Quote mark */}
          <svg class="w-10 h-10 text-[var(--color-accent)]/20 mb-4" fill="currentColor" viewBox="0 0 32 32">
            <path d="M10 8c-3.3 0-6 2.7-6 6v10h10V14H8c0-1.1.9-2 2-2V8zm14 0c-3.3 0-6 2.7-6 6v10h10V14h-6c0-1.1.9-2 2-2V8z" />
          </svg>

          {/* Metric callout */}
          {item.metric && (
            <div class="mb-4 inline-flex items-center px-4 py-2 rounded-full bg-[var(--color-accent)]/10">
              <span class="text-lg font-bold text-[var(--color-accent)]">{item.metric.value}</span>
              <span class="ml-2 text-sm text-gray-600">{item.metric.label}</span>
            </div>
          )}

          <blockquote class="text-gray-700 leading-relaxed mb-6">
            "{item.quote}"
          </blockquote>

          <div class="flex items-center gap-3">
            {item.image ? (
              <img
                src={item.image}
                alt={item.author}
                class="w-12 h-12 rounded-full object-cover"
                loading="lazy"
              />
            ) : (
              <div class="w-12 h-12 rounded-full bg-[var(--color-primary)]/10 flex items-center justify-center">
                <span class="text-lg font-semibold text-[var(--color-primary)]">
                  {item.author.charAt(0)}
                </span>
              </div>
            )}
            <div>
              <p class="font-semibold text-gray-900">{item.author}</p>
              <p class="text-sm text-gray-500">{item.role}, {item.company}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
