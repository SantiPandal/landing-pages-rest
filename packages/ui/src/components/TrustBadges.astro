---
interface Props {
  headline?: string
  items: Array<{
    image: string
    label: string
    description?: string
  }>
}

const { headline = 'Certificaciones y Alianzas', items } = Astro.props
---

<section class="py-16 lg:py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {headline && (
      <div class="text-center mb-12">
        <h2 class="text-2xl sm:text-3xl font-bold text-[var(--color-primary)] tracking-tight">
          {headline}
        </h2>
      </div>
    )}

    <div class={`grid grid-cols-2 gap-6 lg:gap-8 ${items.length >= 3 ? 'md:grid-cols-3' : ''} ${items.length >= 4 ? 'lg:grid-cols-4' : ''} ${items.length >= 5 ? 'xl:grid-cols-5' : ''}`}>
      {items.map((item) => (
        <div class="flex flex-col items-center text-center p-6 bg-white rounded-xl border border-gray-100">
          <div class="w-16 h-16 mb-4 flex items-center justify-center">
            <img
              src={item.image}
              alt={item.label}
              class="max-w-full max-h-full object-contain"
              loading="lazy"
            />
          </div>
          <p class="text-sm font-semibold text-gray-900">{item.label}</p>
          {item.description && (
            <p class="mt-1 text-xs text-gray-500">{item.description}</p>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
