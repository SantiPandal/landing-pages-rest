---
interface Props {
  headline: string
  subheadline?: string
  backgroundImage: string
  ctaUrl: string
  ctaLabel: string
}

const { headline, subheadline, backgroundImage, ctaUrl, ctaLabel } = Astro.props
---

<section class="relative min-h-[85vh] flex items-end overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0">
    <img
      src={backgroundImage}
      alt=""
      class="w-full h-full object-cover"
      loading="eager"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-black/50 to-transparent"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 w-full">
    <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-8">
      <!-- Left: Title + Description -->
      <div class="max-w-xl">
        <h1 class="text-4xl sm:text-5xl lg:text-5xl font-bold text-white leading-tight tracking-tight">
          {headline}
        </h1>
        {subheadline && (
          <p class="mt-4 text-base sm:text-lg text-white/85 leading-relaxed">
            {subheadline}
          </p>
        )}
      </div>

      <!-- Right: CTA -->
      <div class="shrink-0">
        <a
          href={ctaUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-8 py-4 text-base font-semibold text-white bg-[var(--color-accent)] hover:brightness-110 rounded-lg transition-all shadow-lg shadow-[var(--color-accent)]/25 hover:shadow-xl hover:shadow-[var(--color-accent)]/30 hover:-translate-y-0.5"
        >
          {ctaLabel}
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
