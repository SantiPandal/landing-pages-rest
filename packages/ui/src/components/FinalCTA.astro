---
interface Props {
  headline: string
  subheadline?: string
  ctaUrl: string
  ctaLabel: string
}

const { headline, subheadline, ctaUrl, ctaLabel } = Astro.props
---

<section class="py-20 lg:py-28 bg-[var(--color-primary)] relative overflow-hidden" id="contacto">
  <!-- Subtle pattern overlay -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>

  <div class="relative z-10 max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white tracking-tight">
      {headline}
    </h2>
    {subheadline && (
      <p class="mt-6 text-lg text-white/70 max-w-xl mx-auto">
        {subheadline}
      </p>
    )}
    <div class="mt-10">
      <a
        href={ctaUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-8 py-4 text-base font-semibold text-[var(--color-primary)] bg-white hover:bg-gray-50 rounded-lg transition-all shadow-lg hover:shadow-xl hover:-translate-y-0.5"
      >
        {ctaLabel}
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
