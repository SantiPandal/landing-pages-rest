---
interface Props {
  items: Array<{ value: string; label: string }>
}

const { items } = Astro.props
---

<section class="py-12 lg:py-16 bg-white border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class={`grid grid-cols-2 gap-8 ${items.length >= 3 ? 'md:grid-cols-3' : ''} ${items.length >= 4 ? 'lg:grid-cols-4' : ''}`}>
      {items.map((item) => (
        <div class="text-center">
          <p class="text-3xl sm:text-4xl lg:text-5xl font-bold text-[var(--color-primary)] tracking-tight">
            {item.value}
          </p>
          <p class="mt-2 text-sm sm:text-base text-gray-500 font-medium">
            {item.label}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
