---
interface Props {
  headline?: string
  subtitle?: string
  members: Array<{
    name: string
    role: string
    image: string
    bio?: string
    linkedin?: string
  }>
}

const { headline = 'Nuestro Equipo', subtitle, members } = Astro.props
---

<section class="py-20 lg:py-28 bg-white" id="equipo">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-2xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-[var(--color-primary)] tracking-tight">
        {headline}
      </h2>
      {subtitle && (
        <p class="mt-4 text-lg text-gray-600">{subtitle}</p>
      )}
    </div>

    <div class={`grid grid-cols-1 gap-8 ${members.length === 2 ? 'sm:grid-cols-2 max-w-3xl mx-auto' : members.length >= 3 ? 'sm:grid-cols-2 lg:grid-cols-3' : 'max-w-sm mx-auto'} ${members.length >= 4 ? 'xl:grid-cols-4' : ''}`}>
      {members.map((member) => (
        <div class="text-center group">
          <div class="relative w-40 h-40 mx-auto mb-5 rounded-2xl overflow-hidden bg-gray-100">
            <img
              src={member.image}
              alt={member.name}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
          </div>
          <h3 class="text-lg font-semibold text-gray-900">{member.name}</h3>
          <p class="text-sm text-[var(--color-accent)] font-medium mt-1">{member.role}</p>
          {member.bio && (
            <p class="mt-3 text-sm text-gray-500 leading-relaxed max-w-xs mx-auto">{member.bio}</p>
          )}
          {member.linkedin && (
            <a
              href={member.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center mt-3 text-sm text-gray-400 hover:text-[var(--color-primary)] transition-colors"
              aria-label={`LinkedIn de ${member.name}`}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
