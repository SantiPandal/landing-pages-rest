---
interface Props {
  title?: string
  logos: Array<{ src: string; alt: string }>
}

const { title = 'Empresas que conf√≠an en nosotros', logos } = Astro.props
---

<section class="py-16 bg-gray-50" id="clientes">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <p class="text-center text-sm font-medium text-gray-500 uppercase tracking-wider mb-10">
      {title}
    </p>
    <div class="flex flex-wrap items-center justify-center gap-8 lg:gap-14">
      {logos.map((logo) => (
        <div class="flex items-center justify-center h-12 px-2">
          <img
            src={logo.src}
            alt={logo.alt}
            class="h-8 lg:h-10 w-auto object-contain grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</section>
